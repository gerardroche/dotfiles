#!/bin/sh

set -e
unset CDPATH
unset IFS

show_usage() {
    cat <<USAGE
Usage: $(basename "$0") [<SESSION-NAME>]
       $(basename "$0") [-h|--help]
USAGE
}

init_nvm() {
    if test -f "$PWD/.nvmrc"; then
        . ~/.nvm/nvm.sh
        nvm use
    fi
}

SESSION_NAME=
WINDOW_NAME=
while test "$#" != 0; do
    case "$1" in
        --help|-h) show_usage; exit 0 ;;
        --) shift; break ;; # standard end of options list
        -*) echo >&2 "$(basename "$0"): unknown option '$1'" && exit 1 ;;
        *) SESSION_NAME="$1" ;;
    esac
    shift
done

# defaults
DEFAULT_CONFIG_FILE=".tmux"
DEFAULT_SESSION_NAME=mx
DEFAULT_WINDOW_NAME="mx"

if test -n "$SESSION_NAME"; then
    WINDOW_NAME="${SESSION_NAME##*/}"
    if test -d "$PROJECTS_PATH" && test -d "$PROJECTS_PATH/$SESSION_NAME"; then
        cd "$PROJECTS_PATH/$SESSION_NAME"
    fi
elif test -f "$DEFAULT_CONFIG_FILE"; then
    SESSION_NAME="$(basename "$(dirname "$PWD")")/$(basename "$PWD")"
    WINDOW_NAME="${SESSION_NAME##*/}"
else
    SESSION_NAME="$DEFAULT_SESSION_NAME"
    WINDOW_NAME="$DEFAULT_WINDOW_NAME"
fi

echo "Starting tmux session '$SESSION_NAME' (name=$WINDOW_NAME)"

init_nvm

tmux has-session -t "$SESSION_NAME" > /dev/null 2>&1 && HAS_SESSION=y || HAS_SESSION=n

if [ "$HAS_SESSION" = y ]; then
    tmux attach -t "$SESSION_NAME"
else
    if test -n "$SESSION_NAME" && test -f "$DEFAULT_CONFIG_FILE"; then
        tmux -2 new-session -n "$WINDOW_NAME" -s "$SESSION_NAME" \; source-file "$DEFAULT_CONFIG_FILE"
    elif test -n "$WINDOW_NAME" ; then
        tmux -2 new-session -n "$WINDOW_NAME" -s "$SESSION_NAME"
    elif test -f "$DEFAULT_CONFIG_FILE"; then
        tmux -2 new-session -n "$WINDOW_NAME" \; source-file "$DEFAULT_CONFIG_FILE"
    else
        tmux -2 new-session -n "$WINDOW_NAME"
    fi
fi
